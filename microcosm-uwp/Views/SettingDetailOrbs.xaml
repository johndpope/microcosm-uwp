            </StackPanel>
            <TextBlock Text="その他" />
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ソフト" />
                <TextBox x:Name="OtherSoft2" />
                <TextBlock Text="ハード" />
                <TextBox x:Name="OtherHard2" />
            </StackPanel>
            <TextBlock Text="2種・3種" FontSize="24"/>
            <TextBlock Text="太陽" />
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ソフト" />
                <TextBox x:Name="SunSoft150" />
                <TextBlock Text="ハード" />
                <TextBox x:Name="SunHard150" />
            </StackPanel>
            <TextBlock Text="月" />
