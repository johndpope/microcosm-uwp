                <TextBlock Text="ハード" />
                <TextBox x:Name="MoonHard1" />
            </StackPanel>
            <TextBlock Text="その他" />
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="ソフト" />
                <TextBox x:Name="OtherSoft1" />
                <TextBlock Text="ハード" />
                <TextBox x:Name="OtherHard1" />
            </StackPanel>
            <TextBlock Text="2種・3種" FontSize="24"/>
            <TextBlock Text="太陽" />
